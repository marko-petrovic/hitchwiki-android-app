<?xml version="1.0" encoding="utf-8"?>
<com.metaio.cloud.plugin.view.RotatedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutToast"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/toastbackground"
        android:orientation="horizontal"
        android:padding="10dip" >
        <TextView
            android:id="@+id/textToast"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/toastText" >
        </TextView>
    </LinearLayout>
</com.metaio.cloud.plugin.view.RotatedLayout>